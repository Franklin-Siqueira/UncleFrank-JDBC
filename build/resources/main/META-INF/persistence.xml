        </description>

        <!-- Classes (entidades) que serão mapeadas -->
        <!-- Mapped classes/entities -->
        <class>model.Student</class>
        <class>model.State</class>

        <!-- Configurações de conexão ao banco de dados -->
        <!-- DB connection settings -->
        <properties>
